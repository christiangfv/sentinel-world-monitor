rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Eventos - lectura p√∫blica, escritura solo backend (Cloud Functions)
    match /events/{eventId} {
      allow read: if true;
      allow write: if false;
    }

    // Usuarios - solo el propio usuario puede leer/escribir (temporal: permitir escritura para debugging)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      // Temporal: permitir escritura para nuevos usuarios durante desarrollo
      allow create: if true;

      match /zones/{zoneId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /alertPrefs/{prefId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Notificaciones - solo lectura del propio usuario
    match /notifications/{notifId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['readAt']);
      allow create, delete: if false;
    }
  }
}

